<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dave.ViewModels.MainWindow"
        Width="1000" Height="600"
        Background="Transparent"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
        TransparencyLevelHint="AcrylicBlur"
        Title="Dave">
	<Window.Styles>
		<!-- Style fÃ¼r den SchlieÃŸen-Button -->
		<Style Selector="Button.close-button">
			<!-- Standardzustand: Transparent -->
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="BorderThickness" Value="0" />

			<!-- Hover-Effekt: Hintergrund rot -->
			<Style.Animations>
				<Animation Duration="0:0:0.2" FillMode="Forward">
					<KeyFrame Cue="0%">
						<Setter Property="Background" Value="Transparent" />
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Background" Value="Red" />
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
	</Window.Styles>

	<Grid>
		<!-- Frosted Glass Hintergrund -->
		<Border>
			<Border.Background>
				<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
					<GradientStop Color="#14101E" Offset="1" />
				</LinearGradientBrush>
			</Border.Background>
			<Border.Effect>
				<BlurEffect Radius="300" />
			</Border.Effect>
		</Border>

		<!-- Drag-Zone fÃ¼r Fensterbewegung -->
		<Border Background="Transparent" Height="40" VerticalAlignment="Top" HorizontalAlignment="Stretch" PointerPressed="OnDragWindow">
			<Grid>
				<!-- Titeltext -->
				<TextBlock Text="DAVE" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="16" />

				<!-- SchlieÃŸen, Minimieren, Vollbildmodus Buttons -->
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0">
					<Button Content="ðŸ—•" Click="MinimizeButton_Click" Background="Transparent" BorderThickness="0" Foreground="White" />
					<Button Content="ðŸ—–" Click="FullScreenButton_Click" Background="Transparent" BorderThickness="0" Foreground="White" Margin="10,0,0,0" />
					<Button Content="âœ•" Click="CloseButton_Click" Background="Transparent" BorderThickness="0" Foreground="White" Margin="10,0,0,0"
                            Classes="close-button" />
				</StackPanel>
			</Grid>
		</Border>

		<!-- Hauptinhalt -->
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="200"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="300"/>
			</Grid.ColumnDefinitions>
		</Grid>
	</Grid>
</Window>