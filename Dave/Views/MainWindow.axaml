<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dave.ViewModels.MainWindow"
		Icon="avares://Dave/assets/daveicon.ico"
        MinWidth="1000" MinHeight="600"
        Background="Transparent"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
        TransparencyLevelHint="AcrylicBlur"
        Title="Dave">

	<Grid>
		<!-- Frosted Glass Background -->
		<Border>
			<Border.Background>
				<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
					<GradientStop Color="#14101E" Offset="1" />
				</LinearGradientBrush>
			</Border.Background>
			<Border.Effect>
				<BlurEffect Radius="300" />
			</Border.Effect>
		</Border>

		<!-- Drag Zone for Window Movement -->
		<Border Background="Transparent" Height="40" VerticalAlignment="Top" HorizontalAlignment="Stretch"
        PointerPressed="OnDragWindow" IsHitTestVisible="True" Focusable="True">
			<Grid>
				<!-- Title Text -->
				<TextBlock Text="DAVE" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="20" />
			</Grid>
		</Border>

		<!-- Buttons -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,20,0" Spacing="10"
					IsHitTestVisible="True" ZIndex="10">
			<Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Background="Transparent" BorderThickness="0" IsHitTestVisible="True">
				<Grid Width="30" Height="30">
					<Ellipse Width="28" Height="28" Fill="#14101E"/>
					<TextBlock Text="−" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Grid>
			</Button>

			<Button x:Name="FullScreenButton" Click="FullScreenButton_Click" Background="Transparent" BorderThickness="0" IsHitTestVisible="True">
				<Grid Width="30" Height="30">
					<Ellipse Width="28" Height="28" Fill="#14101E"/>
					<TextBlock Text="□" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Grid>
			</Button>

			<Button x:Name="CloseButton" Click="CloseButton_Click" Background="Transparent" BorderThickness="0" IsHitTestVisible="True">
				<Grid Width="30" Height="30">
					<Ellipse Width="28" Height="28" Fill="#14101E"/>
					<TextBlock Text="✕" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Grid>
			</Button>
		</StackPanel>

		<!-- Main Content -->
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Left Side: Game List -->
			<Border Grid.Column="0" Background="#20000000" Padding="20">
				<StackPanel>
					<!-- Search Bar -->
					<TextBox Watermark="Search games..." Background="#40000000" Foreground="White" BorderThickness="0" Padding="10" Margin="0,0,0,20"/>

					<!-- Steam Section -->
					<TextBlock Text="Steam" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
					<ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
						<StackPanel x:Name="SteamGamesContainer" />
					</ScrollViewer>
					<!--StackPanel>
						<Button Classes="game-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="GTA V" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
						<Button Classes="game-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Counter Strike 2" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
						<Button Classes="game-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Brawlhalla" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
					</StackPanel-->

					<!-- Epic Games Section -->
					<TextBlock Text="Epic Games" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
					<StackPanel>
						<Button Classes="game-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Fortnite" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
						<Button Classes="game-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Genshin Impact" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
						<Button Classes="game-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Fall Guys" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
					</StackPanel>

					<!-- GOG Section -->
					<TextBlock Text="GOG" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
					<StackPanel>
						<Button Classes="game-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Cyberpunk" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
						<Button Classes="game-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Bla Bla" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
						<Button Classes="game-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Whatever" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
					</StackPanel>
				</StackPanel>
			</Border>

			<!-- Right Side: Friend List -->
			<Border Grid.Column="2" Background="#20000000" Padding="20" Width="300" HorizontalAlignment="Right">
				<StackPanel>
					<!-- Steam Friends Section -->
					<TextBlock Text="Steam Friends" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
					<StackPanel>
						<Button Classes="friend-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Friend 1" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
						<Button Classes="friend-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Friend 2" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
					</StackPanel>

					<!-- Epic Friends Section -->
					<TextBlock Text="Epic Friends" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
					<StackPanel>
						<Button Classes="friend-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Friend 3" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
						<Button Classes="friend-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Friend 4" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
					</StackPanel>

					<!-- GOG Friends Section -->
					<TextBlock Text="GOG Friends" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
					<StackPanel>
						<Button Classes="friend-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" Stretch="Uniform"/>
								<TextBlock Text="Friend 5" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
						<Button Classes="friend-button" Background="Transparent" BorderThickness="0" Margin="0,5,0,5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="avares://Dave/assets/gtav.png" Width="40" Height="40" HorizontalAlignment="Right"/>
								<TextBlock Text="Friend 6" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
					</StackPanel>
				</StackPanel>
			</Border>
		</Grid>
	</Grid>
</Window>